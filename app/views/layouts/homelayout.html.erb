  <head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css" />
  <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    <script src="assets/buttonanimate.js"></script>
    <script src='assets/sessvars.js'></script>

    <title><%= full_title(yield(:title)) %></title>
  </head>
    <link rel="stylesheet" type="text/css"  href="assets/style.css" />

  <style>
      body {	/*the outer layer of the site and global style attributes*/
        font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
        margin: 0px;
        background: url('assets/background.jpg');
        background-size: 100% 100%;
        width: 100%;
        height: 100%;
        z-index: 0;
      }

      /* Utility Stylesheets */

      a {
        color: inherit;
        text-decoration: none;
      }

      .clear {
        clear: both;
      }

      .img-scaled {
        width: 100%;
      }

      #song-button, #genre-button {
          border-radius: 3px;
          -moz-border-radius: 3px;
          -webkit-border-radius: 3px;
      }

      .button {
          cursor: pointer;
          display: inline-block;
          padding: 8px 80px;
          background-color: rgba(255, 255, 255, 0.12);
          color: white;
      }

      .button:hover
      {
          background-color: rgba(255, 255, 255, 0.35);
      }

      #logoimage {
          float: left;
          height: 25px;
          margin-top: -5px;
      }

      #hero {
          background: transparent;
          color: white;
          padding: 20px;
          height: 25px;
          width: 150px;
          margin-top: -65px;
          margin-left: 10px;
          position: absolute;
      }

      #container{
          position: relative;
      }

      #title-content
      {
        position: absolute;
        width: 100%;
        top: 40%;
        margin-top: -73.5px;
        color: white;
      }

      #title-content-title
      {
        text-align:center;
        font-size: 50px;
        font-weight: 100;
      }

      #title-content-info
      {
        text-align: center;
        margin-bottom: 20px;
        font-size: 13px;
      }

      #title-buttons
      {
        text-align: center;
        margin-bottom: 25px;
      }

      #text-box
      {
        background-color: rgba(255, 255, 255, 0.12);
        border-color: rgba(255, 255, 255, 0.20);
        border-width: 1px;
        padding: 5px;
        width: 600px;
        color: rgba(239, 189, 189, 0.9);
      }

      #form
      {
        display:none;
        position:absolute;
        width: 50%;
        left: 50%;
        margin-left: -323px;
        height: 20px;
      }

      #help
      {
          text-align: center;
          padding-top: 15px;
      }

      #title-options {
        margin-left: 90%;
        margin-top: 35px;
      }

      #about
      {
          color: white;
      }

      #about:hover {
          color: lightblue;
      }

      #hero-red
      {
        display: inline;
        color: rgba(230, 24, 24, 0.9);
      }

      #hero-blue
      {
        display: inline;
        color: rgba(218, 212, 240, 0.99);
      }

      #submit-button
      {
        cursor: pointer;
        display: inline;
        top: 50%;
        padding: 3px 8px;
        margin-left: 5px;
        margin-top: -8px;
        border: 1px solid rgba(255, 255, 255, 0.45);
        background-color: rgba(218, 212, 240, 0.50);
      }

      #submit-button:hover
      {
        background-color: rgba(218, 212, 240, 0.80);
      }

  </style>
  <body>
    <%= yield %>
  </body>
